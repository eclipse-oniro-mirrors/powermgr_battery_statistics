    "native/src/battery_stats_subscriber.cpp",
    "native/src/bluetooth_entity.cpp",
    "native/src/cpu_time_reader.cpp",
    "native/src/idle_entity.cpp",
    "native/src/phone_entity.cpp",
    "native/src/radio_entity.cpp",
    "native/src/screen_entity.cpp",
    "native/src/time_helper.cpp",
    "native/src/uid_entity.cpp",
    "native/src/user_entity.cpp",
    "native/src/wifi_entity.cpp",
  ]


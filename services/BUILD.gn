    ":batterystats_private_config",
  ]

  public_configs = [ ":batterystats_public_config" ]

  deps = [
    "${batterystats_interfaces_path}/innerkits:batterystats_client",
    "//foundation/appexecfwk/standard/kits:appkit_native",
    "//third_party/jsoncpp",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "aafwk_standard:base",

    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
    "battery_manager_native:batterysrv_client",
    "os_account_standard:libaccountkits",
  ]

  part_name = "${batterystats_part_name}"
}
